@using dMart.Models;
@model users;


<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>

    <div class="container mt-4 px-4">
        <div class="card">
            <div class="row align-items-center my-4 card-body">
                <div class="col-12 col-md-7 col-lg-6 order-2 order-md-1">
                    <form action="/signup/Signup" method="post">
                        <div class="text-center mb-4 fw-bold fs-2"> Create an account </div>
                        <div class="input-group mb-4">
                            <i class="bi bi-person-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Username" class="form-control ms-3" placeholder="Enter your Name" />
                            
                        </div>

                        <div class="mb-4 input-group">
                            <i class="bi bi-envelope-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Email" class="form-control ms-3" placeholder="Enter your Email" />
                        </div>

                        <div class="mb-4 input-group">
                            <i class="bi bi-telephone-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Number" class="form-control ms-3" placeholder="Enter number" />
                        </div>

                        <div class="mb-4 input-group">
                            <i class="bi bi-lock-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Password" class="form-control ms-3" placeholder="Create a password" />
                        </div>

                        <div class="mb-4 input-group">
                            <i class="bi bi-key-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="ConfirmPass" class="form-control ms-3" placeholder="Re-enter password" />
                        </div>

                        <div class="mb-4 text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2">Signup</button>
                        </div>

                        <p class="px-5 py-2"> Already have an dMart.pk account? <a asp-action="login"> login </a> </p>


                    </form>
                </div>

                <div class="col-0 col-md-5 col-lg-6 d-flex order-1 order-md-2">
                    <img src="~/lib/signup.png" alt="dMart" class="container" style="width: 80%;">
                </div>

            </div>
            <div class="mb-5 text-center">
                By Signing up, you agree to our <a href="#">Terms and conditions</a>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>