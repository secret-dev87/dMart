@using onlinePharmacy.Models;
@model users;

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>

    <div class="container mt-4 px-5">
        <div class="card">
            <div class="row align-items-center my-4 card-body">
                <div class="col-5 order-2 order-lg-1">
                    <form action="/signup/Login" method="post">
                        <div class="text-center mb-4 fw-bold fs-2"> Log In </div>
                
                        <div class="mb-4 input-group">
                            <i class="bi bi-envelope-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Email" class="form-control ms-3" placeholder="Enter your Email" />
                        </div>


                        <div class="mb-4 input-group">
                            <i class="bi bi-lock-fill" style="font-size: 1.5rem;"></i>
                            <input asp-for="Password" class="form-control ms-3" placeholder="Enter password" />
                        </div>

                        <div class="mb-4 text-center">
                            <button type="submit" class="btn btn-primary px-5 py-2">Login</button>
                        </div>

                        <p class="px-5 py-2">Don't have an account<a asp-action="signup"> Signup </a> </p>
                    </form>
                </div>

                <div class="col-7 d-flex order-1 order-lg-2">
                    <img src="~/lib/signup.png" alt="" class="container" style="width: 70%;">
                </div>

            </div>
            <div class="mb-5 text-center">
                By Signing up, you agree to our <a href="#">Terms and conditions</a>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>